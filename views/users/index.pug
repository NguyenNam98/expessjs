extends ../layout/common
block content
  h1 Users
  .d-flex.align-items-center
    a.btn.btn-primary(href='/users/create' ) Create
    form.ml-auto(action="/users/search", method="GET",class="d-flex")
        input(type="text",name="q",class="form-control")
        button(class="btn btn-primary ml-2") Search
  table.table
    tr
      td Avatar
      td Name
      td Phone
      td Imform  
    each user in users
      tr
        td
          img(src=user.avatar, width="32")
        td=user.name
        td=user.phoneNumber
        td
         a.btn.btn-light(href="/users/"+user.id) Views
    